@model WEB_LIZARZABURU.Models.Employee
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <!-- Column -->
    <div class="col-md-12 col-lg-8 col-xlg-9">
        <div class="card-header bg-info">
        </div>
        <div class="card">
            <ul class="nav nav-tabs profile-tab" role="tablist">
                <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#pnPerfil" role="tab">Information</a> </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="pnPerfil" role="tabpanel">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 col-xs-6 border-right">
                                <strong>Full Name</strong>
                                <br>
                                <p class="text-muted">@Model.LastName @Model.FirstName</p>
                            </div>
                            <div class="col-md-3 col-xs-6 border-right">
                                <strong>Gender</strong>
                                <br>
                                <p class="text-muted">@Model.Gender</p>
                            </div>
                            <div class="col-md-3 col-xs-6 border-right">
                                <strong>Register Date</strong>
                                <br>
                                <p class="text-muted">@Model.RegisterDate</p>
                            </div>
                            <div class="col-md-3 col-xs-6">
                                <strong>District Residence</strong>
                                <br>
                                <p class="text-muted">@Model.DistrictResidence</p>
                            </div>
                            <div class="col-md-3 col-xs-6">
                                <strong>Address Residence</strong>
                                <br>
                                <p class="text-muted">@Model.AddressResidence</p>
                            </div>
                            @{
                                if (Model.TypeContract == 1)
                                {
                                    <div class="col-md-3 bg-success  col-xs-6">
                                        <strong>Type Contract</strong>
                                        <br>
                                        <h3 class="text-muted">Hourly</h3>
                                    </div>

                                    <div class="col-md-3 bg-success  col-xs-6">
                                        <strong>Annual Salary (Hourly Salary)</strong>
                                        <br>
                                        <strong class="text-muted">@Math.Round(ViewBag.HourlySalary) </strong>
                                    </div>
                                }
                                else if (Model.TypeContract == 2)
                                {
                                    <div class="col-md-3 bg-success  col-xs-6">
                                        <strong>Type Contract</strong>
                                        <br>
                                        <h3 class="text-muted">Monthly</h3>
                                    </div>

                                    <div class="col-md-3 bg-success  col-xs-6">
                                        <strong>Annual Salary (Monthly Salary)</strong>
                                        <br>
                                        <strong class="text-muted">@Math.Round(ViewBag.MonthlyContract)</strong>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-3 bg-success  col-xs-6">
                                        <strong>Type Contract</strong>
                                        <br>
                                        <h3 class="text-muted">Hourly And Monthly</h3>
                                    </div>

                                    <div class="col-md-3 bg-success  col-xs-6">
                                        <strong>Annual Salary (Hourly Salary)</strong>
                                        <br>
                                        <strong class="text-muted">@Math.Round(ViewBag.HourlySalary) </strong>
                                    </div>
                                    <div class="col-md-3 bg-success  col-xs-6">
                                        <strong>Annual Salary (Monthly Contract)</strong>
                                        <br>
                                        <strong class="text-muted">@Math.Round(ViewBag.MonthlyContract)</strong>
                                    </div>
                                }

                            }
                            <div class="col-md-3 col-xs-6">
                                <strong>E-Mail</strong>
                                <br>
                                <p class="text-muted">@Model.EmailAddress</p>
                            </div>

                            <div class="col-md-3 col-xs-6">
                                <strong>Phone Number</strong>
                                <br>
                                <p class="text-muted">@Model.PhoneNumber</p>
                            </div>

                            <div class="col-md-3 col-xs-6">
                                <strong>Date Birth</strong>
                                <br>
                                <p class="text-muted">@Model.DateBirth</p>
                            </div>

                            <div class="col-md-3 col-xs-6">
                                <strong>Ocupation</strong>
                                <br>
                                <p class="text-muted">@Model.Occupation</p>
                            </div>

                            <div class="col-md-3 col-xs-6">
                                <strong>Register Date</strong>
                                <br>
                                <p class="text-muted">@Model.RegisterDate</p>
                            </div>
                        </div>
                        <hr>

                    </div>
                </div>

            </div>
        </div>
        <div class="text-center">
            <button onclick="location.href='@Url.Action("Index")'" class="btn btn-sm-block btn-info">Return</button>
        </div>
    </div>
</div>

